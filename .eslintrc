{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "eqeqeq": "error",
        "indent": "warn",
        "curly": "warn",
        "quotes": ["warn", "double"],
        "array-bracket-spacing": ["warn", "never"],
        "no-lonely-if": "warn",
        "no-const-assign": "error",
        "require-jsdoc": ["warn", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true,
                "ArrowFunctionExpression": true
            }
        }],
        "semi": "error"
    },
    "env": {
        "es6": true
    }
}
